<%- include("_header") -%>

    <h1>Create add Data</h1>

    <form action="/insert" method="post">
        <div class="form-horizontal">

            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="Title">Name</label>
                <div class="col-sm-8">
                    <input autofocus class="form-control" name="name"  />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="Author">email</label>
                <div class="col-sm-7">
                    <input class="form-control" name="email"  />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="Author">password</label>
                <div class="col-sm-7">
                    <input class="form-control" name="password"  />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input type="submit" value="Save" class="btn btn-default btn-success" />
                    <a class="btn btn-outline-dark cancel" href="/index">Cancel</a>
                </div>
            </div>
        </div>
    </form>

