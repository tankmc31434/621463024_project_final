<%- include("_header") -%>
    <h1>Update a record</h1>
    <form action="/editdata/<%= model.ID %>" method="post" class="form1">
        <div class="form-horizontal">

            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="Title">ชื่อ</label>
                <div class="col-sm-8">
                    <input autofocus class="form-control" name="name" value="<%= model.name %>" /> <!-- //การดึงข้อมูล -->
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="Author">email</label>
                <div class="col-sm-7">
                    <input class="form-control" name="email" value="<%= model.email %>" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="Author">password</label>
                <div class="col-sm-7">
                    <input class="form-control" name="password" value="<%= model.password %>" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input type="submit" value="Update" class="btn btn-default btn-warning" />
                    <a class="btn btn-outline-dark cancel" href="/books">Cancel</a>
                </div>
            </div>
        </div>
    </form>

    <%- include("_footer") -%>